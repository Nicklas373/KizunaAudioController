<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_app_menu_2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:transitionName="@string/app_main_menu_2"
        app:cardBackgroundColor="@color/blue_500"
        app:cardCornerRadius="4dp"
        app:cardElevation="15dp"
        app:cardMaxElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/app_menu_1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/mandorin_font"
            android:textColor="@color/white"
            android:text="@string/app_main_menu_2"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_astate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="4dp"
                app:cardElevation="15dp"
                app:cardMaxElevation="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_base"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/blue_500"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="13sp"
                    android:layout_marginStart="13sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_out"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_1"
                    android:textSize="15sp"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="13dp"/>

                <TextView
                    android:id="@+id/audio_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:text="@string/PLACEHOLDER"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_2"
                    android:textSize="15sp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="13dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_io_process"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_1"
                    android:textSize="15sp"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="13dp"/>

                <TextView
                    android:id="@+id/audio_pid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:text="@string/PLACEHOLDER"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_2"
                    android:textSize="15sp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="13dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_standby"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_1"
                    android:textSize="15sp"
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="13dp"/>

                <TextView
                    android:id="@+id/audio_standby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:text="@string/PLACEHOLDER"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_2"
                    android:textSize="15sp"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="13dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_ahal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="4dp"
                app:cardElevation="15dp"
                app:cardMaxElevation="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_base_2"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/blue_500"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="13sp"
                    android:layout_marginStart="13sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_sample_rate"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_1"
                    android:textSize="15sp"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="13dp"/>

                <TextView
                    android:id="@+id/audio_sample_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:text="@string/PLACEHOLDER"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_2"
                    android:textSize="15sp"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_hal_frame"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_1"
                    android:textSize="15sp"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="13dp"/>

                <TextView
                    android:id="@+id/audio_hal_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:text="@string/PLACEHOLDER"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_2"
                    android:textSize="15sp"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_hal_format"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_1"
                    android:textSize="15sp"
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="13dp"/>

                <TextView
                    android:id="@+id/audio_hal_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:text="@string/PLACEHOLDER"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_2"
                    android:textSize="15sp"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="20dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_achannel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="4dp"
                app:cardElevation="15dp"
                app:cardMaxElevation="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_base_3"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/blue_500"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="13sp"
                    android:layout_marginStart="13sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_channel_count"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_1"
                    android:textSize="15sp"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="13dp"/>

                <TextView
                    android:id="@+id/audio_channel_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:text="@string/PLACEHOLDER"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_2"
                    android:textSize="15sp"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_channel_mask"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_1"
                    android:textSize="15sp"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="13dp"/>

                <TextView
                    android:id="@+id/audio_channel_mask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:text="@string/PLACEHOLDER"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_2"
                    android:textSize="15sp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="60dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_aformat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="4dp"
                app:cardElevation="15dp"
                app:cardMaxElevation="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_base_4"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/blue_500"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="13sp"
                    android:layout_marginStart="13sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_format"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_1"
                    android:textSize="15sp"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="13dp"/>

                <TextView
                    android:id="@+id/audio_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:text="@string/PLACEHOLDER"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_2"
                    android:textSize="15sp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_frame"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_1"
                    android:textSize="15sp"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="13dp"/>

                <TextView
                    android:id="@+id/audio_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:text="@string/PLACEHOLDER"
                    android:fontFamily="@font/mandorin_font"
                    android:textColor="@color/text_2"
                    android:textSize="15sp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="13dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>