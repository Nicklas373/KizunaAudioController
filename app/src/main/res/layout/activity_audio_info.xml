<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_app_menu_2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:transitionName="@string/app_main_menu_2"
        app:cardBackgroundColor="@color/blue_500"
        app:cardCornerRadius="4dp"
        app:cardElevation="15dp"
        app:cardMaxElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/app_menu_1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/mandorin_font"
            android:text="@string/app_main_menu_2"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/mandorin_font"
            android:text="@string/app_menu_2_info"
            android:textAllCaps="false"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_achannel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardElevation="15dp"
                app:cardMaxElevation="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13sp"
                    android:layout_marginTop="13sp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_base_3"
                    android:textColor="@color/blue_500"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_channel_count"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/audio_channel_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/PLACEHOLDER"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="90dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_channel_mask"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/audio_channel_mask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="60dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/PLACEHOLDER"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_ahal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardElevation="15dp"
                app:cardMaxElevation="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13sp"
                    android:layout_marginTop="13sp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_base_2"
                    android:textColor="@color/blue_500"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="55dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_sample_rate"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/audio_sample_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="55dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/PLACEHOLDER"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="85dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_hal_frame"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/audio_hal_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="85dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/PLACEHOLDER"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="115dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_hal_format"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/audio_hal_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="115dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/PLACEHOLDER"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_aformat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardElevation="15dp"
                app:cardMaxElevation="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13sp"
                    android:layout_marginTop="13sp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_base_4"
                    android:textColor="@color/blue_500"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_format"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/audio_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="13dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/PLACEHOLDER"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="90dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_frame"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/audio_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="13dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/PLACEHOLDER"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="120dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_flags"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/audio_flags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="13dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/PLACEHOLDER"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_asession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardElevation="15dp"
                app:cardMaxElevation="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13sp"
                    android:layout_marginTop="13sp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_base_5"
                    android:textColor="@color/blue_500"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="65dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_effects"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_audio_dsp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="105dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_btn_info"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="65dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_session"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_audio_session"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="105dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_btn_info"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_astate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardElevation="15dp"
                app:cardMaxElevation="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13sp"
                    android:layout_marginTop="13sp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_base"
                    android:textColor="@color/blue_500"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_out"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/audio_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/PLACEHOLDER"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="90dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_io_process"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/audio_pid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="13dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/PLACEHOLDER"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="120dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/audio_standby"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/audio_standby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="13dp"
                    android:fontFamily="@font/mandorin_font"
                    android:text="@string/PLACEHOLDER"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>